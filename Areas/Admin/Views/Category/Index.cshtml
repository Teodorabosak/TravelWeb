@model List<Category>

 <div class="container">
     <div class="row pt-4 pb-3">
         <div class="col-6">
             <h2 class="text-primary">
                 Kategorije putovanja
             </h2>
             <p> U ponudi imamo razlicita putovanja.</p>
         </div>
        <div class="col-6 text-end" >
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"> Dodaj </i>
            </a>
         </div>
     </div>

 </div>
<table class="table table-bordered table-striped">
    <thed>

    </thed>
    <tr>
        <th>
            Naziv
        </th>
        <th>
            Redosled prikazivanja
        </th>
    </tr>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>

            <td>
                <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Izmeni
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-light border mx-2">
                            <i class="bi bi-trash-fill"></i> Obrisi
                        </a>

                </div>
            </td>
        </tr>

        }
    </tbody>
</table>

