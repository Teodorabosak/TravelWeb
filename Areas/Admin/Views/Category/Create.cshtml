@model Category


    <div class="card shadow border-1 my-4 p-1">
        <div class="row pb-1 text-center" >
            <h3 class="text-primary"> Dodaj novu kategoriju putovanja</h3>
            <hr />
        </div>

    <form method="post" class="row">
            <div class="mb-3">
                <label class="p-1"> Naziv kategorije kojoj putovanje pripada</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label class="p-1"> Redosled prikazivanja</label>
                <input asp-for="DisplayOrder" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="p-1"> Opis </label>
                <input asp-for="Description" class="form-control" />
            </div>
            

             <div class="row">
                <div class="col-6">
                 <button type="submit" class="btn btn-primary form-control"> Dodaj </button>
                </div>
             
                <div class="col-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control ">
                            Nazad na listu
                        </a>
                </div>
            </div>
    </form>
</div>

    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial"/>

        }
    }
