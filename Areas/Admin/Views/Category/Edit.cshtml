@model Category



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-1">
            <h3 class="text-primary"> Izmeni kategoriju</h3>
            <hr />
        </div>

        <div class="mb-3">
            <label class="p-1"> Naziv kategorije kojoj putovanje pripada</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="p-1"> Redosled prikazivanja</label>
            <input asp-for="DisplayOrder" class="form-control" />
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control"> Izmeni </button>
            </div>

            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control ">
                    Nazad na listu
                </a>
            </div>
        </div>

    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}
