@model TravelWeb.Models.ViewModels.DestinationVM



    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-1">
                <h3 class="text-primary"> Dodaj novo putovanje </h3>
                <hr/>
            </div>
            
            <div class="mb-3">
                <label class="p-1"> Naziv putovanja</label>
                <input asp-for="Destination.Name" class="form-control"/>
            <span asp-validation-for="Destination.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="p-1"> Opis putovanja</label>
            <input asp-for="Destination.Description" class="form-control" />
            <span asp-validation-for="Destination.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="p-1"> Slika</label>
                <input asp-for="Destination.ImageUrl" class="form-control" />
                <span asp-validation-for="Destination.ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="p-1"> Smestaj</label>
            <input asp-for="Destination.Hotel" class="form-control" />
            <span asp-validation-for="Destination.Hotel" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="p-1"> Cena </label>
            <input asp-for="Destination.Price" class="form-control" />
            <span asp-validation-for="Destination.Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="p-1"> Polazak </label>
            <input asp-for="Destination.Date1" class="form-control" />
            <span asp-validation-for="Destination.Date1" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="p-1"> Povratak </label>
            <input asp-for="Destination.Date2" class="form-control" />
            <span asp-validation-for="Destination.Date2" class="text-danger"></span>
            </div>
            <div class="mb-3">
            <label asp-for="Destination.CategoryId" class="p-1"> Kategorija putovanja </label>
            <select asp-for="Destination.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                        <option disabled selected>---Izaberi kategoriju---</option>
            </select>

            <span asp-validation-for="Destination.CategoryId" class="text-primary"></span>
            </div>


             <div class="row">
                <div class="col-6">
                 <button type="submit" class="btn btn-primary form-control"> Dodaj </button>
                </div>
             
                <div class="col-6">
                        <a asp-controller="Destination" asp-action="Index" class="btn btn-outline-secondary form-control ">
                            Nazad na listu
                        </a>
                </div>
            </div>
            
    </div>
        
    </form>

    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial"/>

        }
    }
