@model BookingVM


<form method="post">
	<br />
	<div class="container">
		<div class="card shadow border-0">

			<div class="card-header bg-primary bg-gradient text-light ml-0 py-4">
				<div class="row px-4">
					<div class="col-6">
						<h5 class="pt-2 text-white">
							Potvrdi rezervaciju
						</h5>
					</div>
					<div class="col-6 text-end">
						<a asp-action="Index" class="btn btn-outline-light btn-sm">Pogledaj ostala putovanja</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							
							
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-primary">Rezervacija:</span>
							</h4>
								<div class="row my-1">
										<div class="col-3">
                
										<label>Ime kupca</label>
										</div>
									<div class="col-9">
										<input asp-for="OrderHeader.FirstName" class="form-control" />
										<span asp-validation-for="OrderHeader.FirstName" class="text-danger"></span>
									</div>
								</div>
						</div>
						<div class="row my-1">
							<div class="col-3">
								<label>Broj telefona</label>
							</div>
							<div class="col-9">
								<input asp-for="OrderHeader.PhoneNumber" class="form-control" />
								<span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
							</div>
						</div>

							<ul class="list-group mb-3">
								@foreach(var details in Model.BookingList){
								<li class="list-group-item d-flex justify-content-between">
									<div>
											<h6 class="my-0">@details.Destination.Name</h6>
											<small class="text-muted">Broj osoba: @details.NumberOfPeople
											</small>
									</div>
									<span class="text-muted">@((details.Destination.Price*details.NumberOfPeople)) (EUR) </span>
								</li>
								}

								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-info">Ukupno (EUR)</small>
									<strong class="text-info">@Model.OrderHeader.OrderTotal.ToString() (EUR)</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					
					<div class="col-12 col-md-4">
						<button type="submit" value="Place Order" class="btn btn-primary form-control">Idi na placanje</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>